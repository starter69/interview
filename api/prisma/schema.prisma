datasource db {
  provider = "postgresql" // or another supported database
  url      = env("DATABASE_URL")
}

model Interview {
  id       Int      @id @default(autoincrement())
  user_id  Int      @unique
  name     String
  date     DateTime
  duration Int
  path     String
}

model Teams {
  id        Int    @id @default(autoincrement())
  team_name String @unique
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  team_id  Int    @unique
  role     Role
}

enum Role {
  ADMIN
  LEAD
  USER
}
